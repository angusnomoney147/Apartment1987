<Window x:Class="ApartmentManagementSystem.AddEditMaintenanceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit Maintenance Request" Height="600" Width="700"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15">
            <TextBlock x:Name="TxtHeader" Text="➕ Add New Maintenance Request" 
                      Foreground="White" FontSize="18" FontWeight="Bold"/>
        </Border>

        <!-- Form -->
        <ScrollViewer Grid.Row="1">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Unit Selection -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Unit *" Margin="0,5"/>
                <ComboBox Grid.Row="1" Grid.Column="0" x:Name="CmbUnits" Margin="0,0,10,15" Padding="5"/>

                <!-- Tenant Selection -->
                <TextBlock Grid.Row="0" Grid.Column="1" Text="Tenant *" Margin="0,5"/>
                <ComboBox Grid.Row="1" Grid.Column="1" x:Name="CmbTenants" Margin="0,0,0,15" Padding="5"/>

                <!-- Description -->
                <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Text="Description *" Margin="0,5"/>
                <TextBox Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" x:Name="TxtDescription" 
                         Margin="0,0,0,15" Padding="5" Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>

                <!-- Priority -->
                <TextBlock Grid.Row="4" Grid.Column="0" Text="Priority" Margin="0,5"/>
                <ComboBox Grid.Row="5" Grid.Column="0" x:Name="CmbPriority" Margin="0,0,10,15" Padding="5"/>

                <!-- Status -->
                <TextBlock Grid.Row="4" Grid.Column="1" Text="Status" Margin="0,5"/>
                <ComboBox Grid.Row="5" Grid.Column="1" x:Name="CmbStatus" Margin="0,0,0,15" Padding="5"/>

                <!-- Request Date -->
                <TextBlock Grid.Row="6" Grid.Column="0" Text="Request Date *" Margin="0,5"/>
                <DatePicker Grid.Row="7" Grid.Column="0" x:Name="DpRequestDate" Margin="0,0,10,15" Padding="5"/>

                <!-- Completed Date -->
                <TextBlock Grid.Row="6" Grid.Column="1" Text="Completed Date" Margin="0,5"/>
                <DatePicker Grid.Row="7" Grid.Column="1" x:Name="DpCompletedDate" Margin="0,0,0,15" Padding="5"/>

                <!-- Cost -->
                <TextBlock Grid.Row="8" Grid.Column="0" Text="Cost ($)" Margin="0,5"/>
                <TextBox Grid.Row="9" Grid.Column="0" x:Name="TxtCost" Margin="0,0,10,15" Padding="5" PreviewTextInput="DecimalOnly_PreviewTextInput"/>

                <!-- Assigned To -->
                <TextBlock Grid.Row="8" Grid.Column="1" Text="Assigned To" Margin="0,5"/>
                <TextBox Grid.Row="9" Grid.Column="1" x:Name="TxtAssignedTo" Margin="0,0,0,15" Padding="5"/>
            </Grid>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="2" Background="#ECF0F1" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="BtnCancel" Content="Cancel" 
                        Width="100" Height="35" Margin="0,0,10,0"
                        Background="#95A5A6" Foreground="White"
                        Click="BtnCancel_Click"/>
                <Button x:Name="BtnSave" Content="Save Request" 
                        Width="120" Height="35"
                        Background="#27AE60" Foreground="White"
                        Click="BtnSave_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>