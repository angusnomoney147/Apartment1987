<Window x:Class="ApartmentManagementSystem.AddEditMaintenanceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit Maintenance Request" Height="600" Width="600"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15">
            <TextBlock x:Name="TxtHeader" Text="🔧 Add New Maintenance Request" 
                      Foreground="White" FontSize="18" FontWeight="Bold"/>
        </Border>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" Padding="20">
            <StackPanel>
                <!-- Unit Selection -->
                <TextBlock Text="Unit:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="CmbUnits" Margin="0,0,0,15" Height="30"/>

                <!-- Description -->
                <TextBlock Text="Description:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="TxtDescription" Height="80" TextWrapping="Wrap" 
                         VerticalScrollBarVisibility="Auto" Margin="0,0,0,15"/>

                <!-- Priority -->
                <TextBlock Text="Priority:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="CmbPriority" Margin="0,0,0,15" Height="30"/>

                <!-- Status -->
                <TextBlock Text="Status:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="CmbStatus" Margin="0,0,0,15" Height="30"/>

                <!-- Assigned To -->
                <TextBlock Text="Assigned To:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="TxtAssignedTo" Margin="0,0,0,15" Height="30"/>

                <!-- Cost -->
                <TextBlock Text="Cost ($):" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="TxtCost" Margin="0,0,0,15" Height="30" PreviewTextInput="DecimalOnly_PreviewTextInput"/>

                <!-- Request Date -->
                <TextBlock Text="Request Date:" FontWeight="Bold" Margin="0,0,0,5"/>
                <DatePicker x:Name="DpRequestDate" Margin="0,0,0,15" Height="30"/>

                <!-- Completed Date -->
                <TextBlock Text="Completed Date:" FontWeight="Bold" Margin="0,0,0,5"/>
                <DatePicker x:Name="DpCompletedDate" Margin="0,0,0,15" Height="30" IsEnabled="False"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="2" Background="#ECF0F1" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="BtnSave" Content="💾 Save" 
                        Padding="20,8" Margin="0,0,10,0"
                        Background="#27AE60" Foreground="White"
                        Click="BtnSave_Click"/>
                <Button x:Name="BtnCancel" Content="❌ Cancel" 
                        Padding="20,8"
                        Background="#E74C3C" Foreground="White"
                        Click="BtnCancel_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>