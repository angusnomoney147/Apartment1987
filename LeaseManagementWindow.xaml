<Window x:Class="ApartmentManagementSystem.LeaseManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lease Management" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15">
            <TextBlock Text="📝 Lease Management" 
                      Foreground="White" FontSize="18" FontWeight="Bold"/>
        </Border>

        <!-- Filters -->
        <Border Grid.Row="1" Background="#ECF0F1" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Status:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox x:Name="CmbStatusFilter" Width="150" Margin="0,0,20,0" 
                         SelectionChanged="CmbStatusFilter_SelectionChanged"/>
                <Button x:Name="BtnShowAll" Content="Show All" 
                        Padding="10,5" Margin="0,0,20,0"
                        Background="#3498DB" Foreground="White"
                        Click="BtnShowAll_Click"/>
                <Button x:Name="BtnActiveOnly" Content="Active Only" 
                        Padding="10,5" Margin="0,0,20,0"
                        Background="#27AE60" Foreground="White"
                        Click="BtnActiveOnly_Click"/>
            </StackPanel>
        </Border>

        <!-- Toolbar -->
        <Border Grid.Row="2" Background="#ECF0F1" Padding="10">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="BtnAddLease" Content="➕ Add New Lease" 
                        Padding="15,8" Margin="0,0,10,0"
                        Background="#27AE60" Foreground="White" 
                        Click="BtnAddLease_Click"/>
                <Button x:Name="BtnEditLease" Content="✏️ Edit Lease" 
                        Padding="15,8" Margin="0,0,10,0"
                        Background="#3498DB" Foreground="White" 
                        Click="BtnEditLease_Click"/>
                <Button x:Name="BtnDeleteLease" Content="🗑️ Delete Lease" 
                        Padding="15,8" Margin="0,0,10,0"
                        Background="#E74C3C" Foreground="White" 
                        Click="BtnDeleteLease_Click"/>
                <Button x:Name="BtnDocuments" Content="📄 Documents" 
                        Padding="15,8" Margin="0,0,10,0"
                        Background="#F39C12" Foreground="White" 
                        Click="BtnDocuments_Click"/>
                <TextBox x:Name="TxtSearch" Width="250" Margin="20,0,0,0" 
                         VerticalContentAlignment="Center"
                         TextChanged="TxtSearch_TextChanged"/>
                <Button x:Name="BtnSearch" Content="🔍" 
                        Padding="10,8" Margin="5,0,0,0"
                        Background="#95A5A6" Foreground="White"/>
                
            </StackPanel>
        </Border>

        <!-- Data Grid -->
        <DataGrid Grid.Row="3" x:Name="DataGridLeases" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  Margin="10"
                  AlternatingRowBackground="#F8F9FA">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="PropertyParams" Binding="{Binding PropertyInfo}" Width="120"/>
                <DataGridTextColumn Header="Unit" Binding="{Binding UnitInfo}" Width="100"/>
                <DataGridTextColumn Header="Tenant" Binding="{Binding TenantInfo}" Width="150"/>
                <DataGridTextColumn Header="Start Date" Binding="{Binding StartDate, StringFormat='{}{0:yyyy-MM-dd}'}" Width="100"/>
                <DataGridTextColumn Header="End Date" Binding="{Binding EndDate, StringFormat='{}{0:yyyy-MM-dd}'}" Width="100"/>
                <DataGridTextColumn Header="Monthly Rent ($)" Binding="{Binding MonthlyRent}" Width="100"/>
                <DataGridTextColumn Header="Security Deposit ($)" Binding="{Binding SecurityDeposit}" Width="120"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                <DataGridTextColumn Header="Created Date" Binding="{Binding CreatedDate, StringFormat='{}{0:yyyy-MM-dd}'}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>