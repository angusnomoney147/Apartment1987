<Window x:Class="ApartmentManagementSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Apartment Management System - Dashboard" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="🏢 Apartment Management System" 
                          Foreground="White" FontSize="20" FontWeight="Bold"/>

                <TextBlock Grid.Column="1" Text="Dashboard" 
                          Foreground="White" FontSize="16" 
                          VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Main Dashboard Content -->
        <Grid Grid.Row="1" Background="#ECF0F1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Stats Overview -->
            <UniformGrid Grid.Row="0" Rows="1" Columns="7" Margin="10">
                <!-- Total Properties -->
                <Border Background="White" CornerRadius="10" Margin="5" Padding="10">
                    <StackPanel>
                        <TextBlock Text="PropertyParams" FontSize="12" HorizontalAlignment="Center" Foreground="#7F8C8D"/>
                        <TextBlock x:Name="TxtTotalProperties" Text="0" FontSize="18" FontWeight="Bold" 
                       HorizontalAlignment="Center" Foreground="#2C3E50"/>
                    </StackPanel>
                </Border>

                <!-- Total Units -->
                <Border Background="White" CornerRadius="10" Margin="5" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Units" FontSize="12" HorizontalAlignment="Center" Foreground="#7F8C8D"/>
                        <TextBlock x:Name="TxtTotalUnits" Text="0" FontSize="18" FontWeight="Bold" 
                       HorizontalAlignment="Center" Foreground="#2C3E50"/>
                    </StackPanel>
                </Border>

                <!-- Occupied Units -->
                <Border Background="White" CornerRadius="10" Margin="5" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Occupied" FontSize="12" HorizontalAlignment="Center" Foreground="#7F8C8D"/>
                        <TextBlock x:Name="TxtOccupiedUnits" Text="0" FontSize="18" FontWeight="Bold" 
                       HorizontalAlignment="Center" Foreground="#2C3E50"/>
                    </StackPanel>
                </Border>

                <!-- Vacant Units -->
                <Border Background="White" CornerRadius="10" Margin="5" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Vacant" FontSize="12" HorizontalAlignment="Center" Foreground="#7F8C8D"/>
                        <TextBlock x:Name="TxtVacantUnits" Text="0" FontSize="18" FontWeight="Bold" 
                       HorizontalAlignment="Center" Foreground="#2C3E50"/>
                    </StackPanel>
                </Border>

                <!-- Pending Maintenance -->
                <Border Background="White" CornerRadius="10" Margin="5" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Maintenance" FontSize="12" HorizontalAlignment="Center" Foreground="#7F8C8D"/>
                        <TextBlock x:Name="TxtPendingMaintenance" Text="0" FontSize="18" FontWeight="Bold" 
                       HorizontalAlignment="Center" Foreground="#2C3E50"/>
                    </StackPanel>
                </Border>

                <!-- Overdue Payments -->
                <Border Background="White" CornerRadius="10" Margin="5" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Overdue" FontSize="12" HorizontalAlignment="Center" Foreground="#7F8C8D"/>
                        <TextBlock x:Name="TxtOverduePayments" Text="0" FontSize="18" FontWeight="Bold" 
                       HorizontalAlignment="Center" Foreground="#2C3E50"/>
                    </StackPanel>
                </Border>

                <!-- Active Leases -->
                <Border Background="White" CornerRadius="10" Margin="5" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Active Leases" FontSize="12" HorizontalAlignment="Center" Foreground="#7F8C8D"/>
                        <TextBlock x:Name="TxtActiveLeases" Text="0" FontSize="18" FontWeight="Bold" 
                       HorizontalAlignment="Center" Foreground="#2C3E50"/>
                    </StackPanel>
                </Border>
            </UniformGrid>
            
            <!-- Main Content Area -->
            <Grid Grid.Row="1" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <TabControl Grid.Column="0" Margin="5">
                    <!-- Recent Activity Tab -->
                    <TabItem Header="🕒 Recent Activity">
                        <Border Background="White" CornerRadius="10" Margin="5" Padding="15">
                            <DockPanel>
                                <TextBlock DockPanel.Dock="Top" Text="Recent Activity" FontSize="16" FontWeight="Bold" 
                           Foreground="#2C3E50" Margin="0,0,0,10"/>
                                <DataGrid x:Name="DataGridRecentActivity" 
                          AutoGenerateColumns="False" 
                          IsReadOnly="True"
                          Margin="0,10,0,0"
                          AlternatingRowBackground="#F8F9FA">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat='{}{0:yyyy-MM-dd}'}" Width="100"/>
                                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="120"/>
                                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </DockPanel>
                        </Border>
                    </TabItem>

                    <!-- Vacant Units Tab -->
                    <TabItem Header="PropertyParams - Vacant">
                        <Border Background="White" CornerRadius="10" Margin="5" Padding="15">
                            <DockPanel>
                                <TextBlock DockPanel.Dock="Top" Text="Vacant Units" FontSize="16" FontWeight="Bold" 
                           Foreground="#2C3E50" Margin="0,0,0,10"/>
                                <DataGrid x:Name="DataGridVacantUnits" 
                          AutoGenerateColumns="False" 
                          IsReadOnly="True"
                          Margin="0,10,0,0"
                          AlternatingRowBackground="#F8F9FA">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="PropertyParams" Binding="{Binding PropertyName}" Width="150"/>
                                        <DataGridTextColumn Header="Unit" Binding="{Binding UnitNumber}" Width="80"/>
                                        <DataGridTextColumn Header="Type" Binding="{Binding UnitType}" Width="100"/>
                                        <DataGridTextColumn Header="Rent ($)" Binding="{Binding RentAmount}" Width="80"/>
                                        <DataGridTextColumn Header="Bedrooms" Binding="{Binding Bedrooms}" Width="80"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </DockPanel>
                        </Border>
                    </TabItem>

                    <!-- Occupied Units Tab -->
                    <TabItem Header="PropertyParams - Occupied">
                        <Border Background="White" CornerRadius="10" Margin="5" Padding="15">
                            <DockPanel>
                                <TextBlock DockPanel.Dock="Top" Text="Occupied Units" FontSize="16" FontWeight="Bold" 
                           Foreground="#2C3E50" Margin="0,0,0,10"/>
                                <DataGrid x:Name="DataGridOccupiedUnits" 
                          AutoGenerateColumns="False" 
                          IsReadOnly="True"
                          Margin="0,10,0,0"
                          AlternatingRowBackground="#F8F9FA">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="PropertyParams" Binding="{Binding PropertyName}" Width="150"/>
                                        <DataGridTextColumn Header="Unit" Binding="{Binding UnitNumber}" Width="80"/>
                                        <DataGridTextColumn Header="Tenant" Binding="{Binding TenantName}" Width="150"/>
                                        <DataGridTextColumn Header="Lease Start" Binding="{Binding LeaseStart, StringFormat='{}{0:yyyy-MM-dd}'}" Width="100"/>
                                        <DataGridTextColumn Header="Monthly Rent ($)" Binding="{Binding MonthlyRent}" Width="100"/>
                                        <DataGridTextColumn Header="Lease End" Binding="{Binding LeaseEnd, StringFormat='{}{0:yyyy-MM-dd}'}" Width="100"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </DockPanel>
                        </Border>
                    </TabItem>

                    <!-- Tenant Activity Tab -->
                    <TabItem Header="👥 Tenant Activity">
                        <Border Background="White" CornerRadius="10" Margin="5" Padding="15">
                            <DockPanel>
                                <TextBlock DockPanel.Dock="Top" Text="Tenant Activity" FontSize="16" FontWeight="Bold" 
                           Foreground="#2C3E50" Margin="0,0,0,10"/>
                                <DataGrid x:Name="DataGridTenantActivity" 
                          AutoGenerateColumns="False" 
                          IsReadOnly="True"
                          Margin="0,10,0,0"
                          AlternatingRowBackground="#F8F9FA">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Tenant" Binding="{Binding TenantName}" Width="150"/>
                                        <DataGridTextColumn Header="PropertyParams" Binding="{Binding PropertyName}" Width="120"/>
                                        <DataGridTextColumn Header="Unit" Binding="{Binding UnitNumber}" Width="80"/>
                                        <DataGridTextColumn Header="Lease Start" Binding="{Binding LeaseStart, StringFormat='{}{0:yyyy-MM-dd}'}" Width="100"/>
                                        <DataGridTextColumn Header="Monthly Rent ($)" Binding="{Binding MonthlyRent}" Width="100"/>
                                        <DataGridTextColumn Header="Status" Binding="{Binding LeaseStatus}" Width="100"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </DockPanel>
                        </Border>
                    </TabItem>

                    <!-- Maintenance Status Tab -->
                    <TabItem Header="🔧 Maintenance">
                        <Border Background="White" CornerRadius="10" Margin="5" Padding="15">
                            <DockPanel>
                                <TextBlock DockPanel.Dock="Top" Text="Maintenance Status" FontSize="16" FontWeight="Bold" 
                           Foreground="#2C3E50" Margin="0,0,0,10"/>
                                <DataGrid x:Name="DataGridMaintenanceStatus" 
                          AutoGenerateColumns="False" 
                          IsReadOnly="True"
                          Margin="0,10,0,0"
                          AlternatingRowBackground="#F8F9FA">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="PropertyParams" Binding="{Binding PropertyName}" Width="120"/>
                                        <DataGridTextColumn Header="Unit" Binding="{Binding UnitNumber}" Width="80"/>
                                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="200"/>
                                        <DataGridTextColumn Header="Priority" Binding="{Binding Priority}" Width="80"/>
                                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                                        <DataGridTextColumn Header="Request Date" Binding="{Binding RequestDate, StringFormat='{}{0:yyyy-MM-dd}'}" Width="100"/>
                                        <DataGridTextColumn Header="Assigned To" Binding="{Binding AssignedTo}" Width="120"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </DockPanel>
                        </Border>
                    </TabItem>
                </TabControl>

                <!-- Quick Actions and Reports -->
                <Border Grid.Column="1" Background="White" CornerRadius="10" Margin="5" Padding="15">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="Quick Actions" FontSize="16" FontWeight="Bold" 
                                       Foreground="#2C3E50" Margin="0,0,0,15"/>

                            <Button x:Name="btnTenants" Content="👥 Manage Tenants" 
                                    Margin="0,5" Padding="12" 
                                    Background="#3498DB" Foreground="White" FontSize="14"
                                    Click="btnTenants_Click"/>
                            <Button x:Name="btnProperties" Content="🏘️ Manage Properties" 
                                    Margin="0,5" Padding="12" 
                                    Background="#2ECC71" Foreground="White" FontSize="14"
                                    Click="btnProperties_Click"/>
                            <Button x:Name="btnUnits" Content="🏠 Manage Units" 
                                    Margin="0,5" Padding="12" 
                                    Background="#E67E22" Foreground="White" FontSize="14"
                                    Click="btnUnits_Click"/>
                            <Button x:Name="btnLeases" Content="📝 Manage Leases" 
                                    Margin="0,5" Padding="12" 
                                    Background="#9B59B6" Foreground="White" FontSize="14"
                                    Click="btnLeases_Click"/>
                            <Button x:Name="btnPayments" Content="💰 Manage Payments" 
                                    Margin="0,5" Padding="12" 
                                    Background="#F39C12" Foreground="White" FontSize="14"
                                    Click="btnPayments_Click"/>
                            <Button x:Name="btnMaintenance" Content="🔧 Manage Maintenance" 
                                    Margin="0,5" Padding="12" 
                                    Background="#E74C3C" Foreground="White" FontSize="14"
                                    Click="btnMaintenance_Click"/>

                            <Separator Margin="0,20"/>

                            <TextBlock Text="Reports" FontSize="14" FontWeight="Bold" 
                                       Foreground="#2C3E50" Margin="0,15,0,10"/>

                            <Button x:Name="btnPropertyReport" Content="PropertyParams Report" 
                                    Margin="0,5" Padding="10" 
                                    Background="#34495E" Foreground="White" 
                                    Click="btnPropertyReport_Click"/>
                            <Button x:Name="btnTenantReport" Content="Tenant Report" 
                                    Margin="0,5" Padding="10" 
                                    Background="#34495E" Foreground="White" 
                                    Click="btnTenantReport_Click"/>
                            <Button x:Name="btnFinancialReport" Content="Financial Report" 
                                    Margin="0,5" Padding="10" 
                                    Background="#34495E" Foreground="White" 
                                    Click="btnFinancialReport_Click"/>
                            <Button x:Name="btnMaintenanceReport" Content="Maintenance Report" 
                                    Margin="0,5" Padding="10" 
                                    Background="#34495E" Foreground="White" 
                                    Click="btnMaintenanceReport_Click"/>
                            <Button x:Name="btnLeaseExpiryReport" Content="Lease Expiry Report" 
                                    Margin="0,5" Padding="10" 
                                    Background="#34495E" Foreground="White" 
                                    Click="btnLeaseExpiryReport_Click"/>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>