<Window x:Class="ApartmentManagementSystem.TenantManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tenant Management" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15">
            <TextBlock Text="👥 Tenant Management" 
                      Foreground="White" FontSize="18" FontWeight="Bold"/>
        </Border>

        <!-- Toolbar -->
        <Border Grid.Row="1" Background="#ECF0F1" Padding="10">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="BtnAddTenant" Content="➕ Add New Tenant" 
                        Padding="15,8" Margin="0,0,10,0"
                        Background="#27AE60" Foreground="White" 
                        Click="BtnAddTenant_Click"/>
                <Button x:Name="BtnEditTenant" Content="✏️ Edit Tenant" 
                        Padding="15,8" Margin="0,0,10,0"
                        Background="#3498DB" Foreground="White" 
                        Click="BtnEditTenant_Click"/>
                <Button x:Name="BtnDeleteTenant" Content="🗑️ Delete Tenant" 
                        Padding="15,8" Margin="0,0,10,0"
                        Background="#E74C3C" Foreground="White" 
                        Click="BtnDeleteTenant_Click"/>
                <TextBox x:Name="TxtSearch" Width="250" Margin="20,0,0,0" 
                         VerticalContentAlignment="Center"
                         TextChanged="TxtSearch_TextChanged"/>
                <Button x:Name="BtnSearch" Content="🔍" 
                        Padding="10,8" Margin="5,0,0,0"
                        Background="#95A5A6" Foreground="White"/>
            </StackPanel>
        </Border>

        <!-- Data Grid -->
        <DataGrid Grid.Row="3" x:Name="DataGridTenants" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  Margin="10"
                  AlternatingRowBackground="#F8F9FA">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="150"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="150"/>
                <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" Width="120"/>
                <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="200"/>
                <DataGridTextColumn Header="National ID" Binding="{Binding NationalId}" Width="120"/>
                <DataGridTextColumn Header="Emergency Contact" Binding="{Binding EmergencyContact}" Width="150"/>
                <DataGridTextColumn Header="Emergency Phone" Binding="{Binding EmergencyPhone}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>