<Window x:Class="ApartmentManagementSystem.AddEditUnitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit Unit" Height="550" Width="600"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15">
            <TextBlock x:Name="TxtHeader" Text="➕ Add New Unit" 
                      Foreground="White" FontSize="18" FontWeight="Bold"/>
        </Border>

        <!-- Form -->
        <ScrollViewer Grid.Row="1">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Property -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Property *" Margin="0,5"/>
                <ComboBox Grid.Row="1" Grid.Column="0" x:Name="CmbProperties" Margin="0,0,10,15" Padding="5"/>

                <!-- Unit Number -->
                <TextBlock Grid.Row="0" Grid.Column="1" Text="Unit Number *" Margin="0,5"/>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="TxtUnitNumber" Margin="0,0,0,15" Padding="5"/>

                <!-- Unit Type -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Unit Type" Margin="0,5"/>
                <TextBox Grid.Row="3" Grid.Column="0" x:Name="TxtUnitType" Margin="0,0,10,15" Padding="5"/>

                <!-- Size -->
                <TextBlock Grid.Row="2" Grid.Column="1" Text="Size (sq ft)" Margin="0,5"/>
                <TextBox Grid.Row="3" Grid.Column="1" x:Name="TxtSize" Margin="0,0,0,15" Padding="5" PreviewTextInput="DecimalOnly_PreviewTextInput"/>

                <!-- Rent Amount -->
                <TextBlock Grid.Row="4" Grid.Column="0" Text="Rent Amount ($)" Margin="0,5"/>
                <TextBox Grid.Row="5" Grid.Column="0" x:Name="TxtRentAmount" Margin="0,0,10,15" Padding="5" PreviewTextInput="DecimalOnly_PreviewTextInput"/>

                <!-- Bedrooms -->
                <TextBlock Grid.Row="4" Grid.Column="1" Text="Bedrooms" Margin="0,5"/>
                <TextBox Grid.Row="5" Grid.Column="1" x:Name="TxtBedrooms" Margin="0,0,0,15" Padding="5" PreviewTextInput="NumberOnly_PreviewTextInput"/>

                <!-- Bathrooms -->
                <TextBlock Grid.Row="6" Grid.Column="0" Text="Bathrooms" Margin="0,5"/>
                <TextBox Grid.Row="7" Grid.Column="0" x:Name="TxtBathrooms" Margin="0,0,10,15" Padding="5" PreviewTextInput="NumberOnly_PreviewTextInput"/>

                <!-- Status -->
                <TextBlock Grid.Row="6" Grid.Column="1" Text="Status" Margin="0,5"/>
                <ComboBox Grid.Row="7" Grid.Column="1" x:Name="CmbStatus" Margin="0,0,0,15" Padding="5"/>

                <!-- Description -->
                <TextBlock Grid.Row="8" Grid.Column="0" Text="Description" Margin="0,5"/>
                <TextBox Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" x:Name="TxtDescription" Margin="0,0,0,15" Padding="5" AcceptsReturn="True" Height="60"/>

                <!-- Created Date -->
                <TextBlock Grid.Row="10" Grid.Column="0" Text="Created Date" Margin="0,5"/>
                <DatePicker Grid.Row="11" Grid.Column="0" x:Name="DpCreatedDate" Margin="0,0,10,15"/>
            </Grid>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="2" Background="#ECF0F1" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="BtnCancel" Content="Cancel" 
                        Width="100" Height="35" Margin="0,0,10,0"
                        Background="#95A5A6" Foreground="White"
                        Click="BtnCancel_Click"/>
                <Button x:Name="BtnSave" Content="Save Unit" 
                        Width="120" Height="35"
                        Background="#27AE60" Foreground="White"
                        Click="BtnSave_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>