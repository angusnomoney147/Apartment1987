<Window x:Class="ApartmentManagementSystem.AddEditTenantWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit Tenant" Height="650" Width="600"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15">
            <TextBlock x:Name="TxtHeader" Text="Add New Tenant" 
                      Foreground="White" FontSize="18" FontWeight="Bold"/>
        </Border>

        <!-- Form -->
        <ScrollViewer Grid.Row="1">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <!-- Add this new row for lease information -->
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- First Name -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="First Name *" Margin="0,5"/>
                <TextBox Grid.Row="1" Grid.Column="0" x:Name="TxtFirstName" Margin="0,0,10,15" Padding="5"/>

                <!-- Last Name -->
                <TextBlock Grid.Row="0" Grid.Column="1" Text="Last Name *" Margin="0,5"/>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="TxtLastName" Margin="0,0,0,15" Padding="5"/>

                <!-- Email -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Email" Margin="0,5"/>
                <TextBox Grid.Row="3" Grid.Column="0" x:Name="TxtEmail" Margin="0,0,10,15" Padding="5"/>

                <!-- Phone -->
                <TextBlock Grid.Row="2" Grid.Column="1" Text="Phone" Margin="0,5"/>
                <TextBox Grid.Row="3" Grid.Column="1" x:Name="TxtPhone" Margin="0,0,0,15" Padding="5"/>

                <!-- Date of Birth -->
                <TextBlock Grid.Row="4" Grid.Column="0" Text="Date of Birth" Margin="0,5"/>
                <DatePicker Grid.Row="5" Grid.Column="0" x:Name="DpDateOfBirth" Margin="0,0,10,15" Padding="5"/>

                <!-- National ID -->
                <TextBlock Grid.Row="4" Grid.Column="1" Text="National ID" Margin="0,5"/>
                <TextBox Grid.Row="5" Grid.Column="1" x:Name="TxtNationalId" Margin="0,0,0,15" Padding="5"/>

                <!-- Address -->
                <TextBlock Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Text="Address" Margin="0,5"/>
                <TextBox Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" x:Name="TxtAddress" 
                         Margin="0,0,0,15" Padding="5" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>

                <!-- Emergency Contact -->
                <TextBlock Grid.Row="8" Grid.Column="0" Text="Emergency Contact" Margin="0,5"/>
                <TextBox Grid.Row="9" Grid.Column="0" x:Name="TxtEmergencyContact" Margin="0,0,10,15" Padding="5"/>

                <!-- Emergency Phone -->
                <TextBlock Grid.Row="8" Grid.Column="1" Text="Emergency Phone" Margin="0,5"/>
                <TextBox Grid.Row="9" Grid.Column="1" x:Name="TxtEmergencyPhone" Margin="0,0,0,15" Padding="5"/>

                <!-- Lease Information (Optional) - NOW INSIDE THE GRID -->
                <Border Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2" Background="#F8F9FA" 
                        Margin="0,20,0,0" Padding="10" CornerRadius="5">
                    <StackPanel>
                        <CheckBox x:Name="ChkCreateLease" Content="Create Lease Agreement After Tenant Creation" 
                              Margin="0,0,0,10" Checked="ChkCreateLease_Checked" Unchecked="ChkCreateLease_Unchecked"/>

                        <Grid x:Name="LeaseDetailsGrid" Visibility="Collapsed">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Unit Selection -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Unit *" Margin="0,5"/>
                            <ComboBox Grid.Row="1" Grid.Column="0" x:Name="CmbUnits" Margin="0,0,10,15" Padding="5"/>

                            <!-- Start Date -->
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="Start Date *" Margin="0,5"/>
                            <DatePicker Grid.Row="1" Grid.Column="1" x:Name="DpStartDate" Margin="0,0,0,15" Padding="5"/>

                            <!-- End Date -->
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="End Date *" Margin="0,5"/>
                            <DatePicker Grid.Row="3" Grid.Column="0" x:Name="DpEndDate" Margin="0,0,10,15" Padding="5"/>

                            <!-- Monthly Rent -->
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="Monthly Rent ($)" Margin="0,5"/>
                            <TextBox Grid.Row="3" Grid.Column="1" x:Name="TxtMonthlyRent" Margin="0,0,0,15" Padding="5" PreviewTextInput="DecimalOnly_PreviewTextInput"/>

                            <!-- Security Deposit -->
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Security Deposit ($)" Margin="0,5"/>
                            <TextBox Grid.Row="5" Grid.Column="0" x:Name="TxtSecurityDeposit" Margin="0,0,10,15" Padding="5" PreviewTextInput="DecimalOnly_PreviewTextInput"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="2" Background="#ECF0F1" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="BtnCancel" Content="Cancel" 
                        Width="100" Height="35" Margin="0,0,10,0"
                        Background="#95A5A6" Foreground="White"
                        Click="BtnCancel_Click"/>
                <Button x:Name="BtnSave" Content="Save Tenant" 
                        Width="120" Height="35"
                        Background="#27AE60" Foreground="White"
                        Click="BtnSave_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>