<Window x:Class="ApartmentManagementSystem.ReportViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Report Viewer" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" x:Name="TxtTitle" Text="PropertyParams Report" 
                          Foreground="White" FontSize="18" FontWeight="Bold"/>

                <TextBlock Grid.Column="1" Text="Report Viewer" 
                          Foreground="White" FontSize="14" 
                          VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Report Content -->
        <TextBox Grid.Row="1" x:Name="TxtReportContent" 
                 Margin="10" 
                 IsReadOnly="True" 
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 FontFamily="Consolas"
                 FontSize="12"
                 TextWrapping="NoWrap"/>

        <!-- Buttons -->
        <Border Grid.Row="2" Background="#ECF0F1" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="BtnPrint" Content="🖨️ Print" 
                        Width="100" Height="35" Margin="0,0,10,0"
                        Background="#3498DB" Foreground="White"
                        Click="BtnPrint_Click"/>
                <Button x:Name="BtnExportTxt" Content="💾 Export TXT" 
                        Width="120" Height="35" Margin="0,0,10,0"
                        Background="#27AE60" Foreground="White"
                        Click="BtnExportTxt_Click"/>
                <Button x:Name="BtnExportPdf" Content="📄 Export PDF" 
                        Width="120" Height="35" Margin="0,0,10,0"
                        Background="#E74C3C" Foreground="White"
                        Click="BtnExportPdf_Click"/>
                <Button x:Name="BtnExportExcel" Content="📊 Export Excel" 
                        Width="120" Height="35" Margin="0,0,10,0"
                        Background="#2ECC71" Foreground="White"
                        Click="BtnExportExcel_Click"/>
                <Button x:Name="BtnClose" Content="Close" 
                        Width="100" Height="35"
                        Background="#95A5A6" Foreground="White"
                        Click="BtnClose_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>