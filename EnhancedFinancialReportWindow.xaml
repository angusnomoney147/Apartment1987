<Window x:Class="ApartmentManagementSystem.EnhancedFinancialReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enhanced Financial Report" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15">
            <TextBlock Text="💰 Enhanced Financial Report" 
                      Foreground="White" FontSize="18" FontWeight="Bold"/>
        </Border>

        <!-- Filters -->
        <Border Grid.Row="1" Background="#ECF0F1" Padding="10">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="From Date:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <DatePicker x:Name="DpFromDate" Width="120" Margin="0,0,20,0"/>
                    <TextBlock Text="To Date:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <DatePicker x:Name="DpToDate" Width="120" Margin="0,0,20,0"/>
                    <Button x:Name="BtnGenerate" Content="Generate Report" 
                            Padding="15,5" Background="#27AE60" Foreground="White"
                            Click="BtnGenerate_Click"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="PropertyParams:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox x:Name="CmbProperties" Width="150" Margin="0,0,20,0"/>
                    <TextBlock Text="Tenant:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox x:Name="CmbTenants" Width="150" Margin="0,0,20,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Data Grid -->
        <DataGrid Grid.Row="2" x:Name="DataGridFinancialReport" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  Margin="10"
                  AlternatingRowBackground="#F8F9FA"
                  CanUserSortColumns="True">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="60"/>
                <DataGridTextColumn Header="Payment Date" Binding="{Binding PaymentDate, StringFormat='{}{0:yyyy-MM-dd}'}" Width="100"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80"/>
                <DataGridTextColumn Header="Property, Unit" Binding="{Binding PropertyInfo}" Width="150"/>
                <DataGridTextColumn Header="Rent Amount" Binding="{Binding RentAmount, StringFormat='{}{0:C}'}" Width="100"/>
                <DataGridTextColumn Header="Tenant Name" Binding="{Binding TenantName}" Width="150"/>
                <DataGridTextColumn Header="Phone" Binding="{Binding PhoneNumber}" Width="120"/>
                <DataGridTextColumn Header="Created Date" Binding="{Binding CreatedDate, StringFormat='{}{0:yyyy-MM-dd}'}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Summary -->
        <Border Grid.Row="3" Background="#ECF0F1" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="TxtTotalAmount" Text="Total Amount: $0.00" 
                          FontWeight="Bold" Margin="0,0,20,0"/>
                <TextBlock x:Name="TxtRecordCount" Text="Records: 0" 
                          FontWeight="Bold"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>