<Window x:Class="ApartmentManagementSystem.EnhancedFinancialReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enhanced Financial Report" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15">
            <TextBlock Text="💰 Enhanced Financial Report" 
                      Foreground="White" FontSize="18" FontWeight="Bold"/>
        </Border>

        <!-- Filters -->
        <Border Grid.Row="1" Background="#ECF0F1" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Date Range -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="From Date:" Margin="0,0,0,5"/>
                <DatePicker Grid.Row="1" Grid.Column="0" x:Name="DpFromDate" Margin="0,0,5,0" Padding="3"/>

                <TextBlock Grid.Row="0" Grid.Column="1" Text="To Date:" Margin="0,0,0,5"/>
                <DatePicker Grid.Row="1" Grid.Column="1" x:Name="DpToDate" Margin="0,0,5,0" Padding="3"/>

                <!-- Property Selection -->
                <TextBlock Grid.Row="0" Grid.Column="2" Text="PropertyParams:" Margin="0,0,0,5"/>
                <ComboBox Grid.Row="1" Grid.Column="2" x:Name="CmbProperties" Margin="0,0,5,0" Padding="3"/>

                <!-- Tenant Selection -->
                <TextBlock Grid.Row="0" Grid.Column="3" Text="Tenant:" Margin="0,0,0,5"/>
                <ComboBox Grid.Row="1" Grid.Column="3" x:Name="CmbTenants" Margin="0,0,5,0" Padding="3"/>

                <!-- Generate Button -->
                <Button Grid.Row="1" Grid.Column="4" x:Name="BtnGenerate" Content="Generate Report" 
                        Padding="10,5" Background="#27AE60" Foreground="White" 
                        Click="BtnGenerate_Click"/>
            </Grid>
        </Border>

        <!-- Report Grid -->
        <DataGrid Grid.Row="2" x:Name="DataGridFinancialReport" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  Margin="10"
                  AlternatingRowBackground="#F8F9FA">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Payment Date" Binding="{Binding PaymentDate, StringFormat='{}{0:yyyy-MM-dd}'}" Width="100"/>
                <DataGridTextColumn Header="PropertyParams" Binding="{Binding PropertyName}" Width="150"/>
                <DataGridTextColumn Header="Unit" Binding="{Binding UnitNumber}" Width="80"/>
                <DataGridTextColumn Header="Tenant" Binding="{Binding TenantName}" Width="150"/>
                <DataGridTextColumn Header="Amount ($)" Binding="{Binding Amount, StringFormat='{}{0:F2}'}" Width="100"/>
                <DataGridTextColumn Header="Method" Binding="{Binding Method}" Width="100"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80"/>
                <DataGridTextColumn Header="Reference #" Binding="{Binding ReferenceNumber}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Summary -->
        <Border Grid.Row="3" Background="#ECF0F1" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="TxtTotalAmount" Text="Total Amount: $0.00" 
                          FontWeight="Bold" FontSize="14" Margin="0,0,20,0"/>
                <TextBlock x:Name="TxtRecordCount" Text="Records: 0" 
                          FontWeight="Bold" FontSize="14"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>