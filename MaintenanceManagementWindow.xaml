<Window x:Class="ApartmentManagementSystem.MaintenanceManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Maintenance Management" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15">
            <TextBlock Text="🔧 Maintenance Management" 
                      Foreground="White" FontSize="18" FontWeight="Bold"/>
        </Border>

        <!-- Filters -->
        <Border Grid.Row="1" Background="#ECF0F1" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Status:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox x:Name="CmbStatusFilter" Width="150" Margin="0,0,20,0" 
                         SelectionChanged="CmbStatusFilter_SelectionChanged"/>
                <TextBlock Text="Priority:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox x:Name="CmbPriorityFilter" Width="150" Margin="0,0,20,0" 
                         SelectionChanged="CmbPriorityFilter_SelectionChanged"/>
                <Button x:Name="BtnShowAll" Content="Show All" 
                        Padding="10,5" Margin="0,0,20,0"
                        Background="#3498DB" Foreground="White"
                        Click="BtnShowAll_Click"/>
                <Button x:Name="BtnPendingOnly" Content="Pending Only" 
                        Padding="10,5" Margin="0,0,20,0"
                        Background="#F39C12" Foreground="White"
                        Click="BtnPendingOnly_Click"/>
            </StackPanel>
        </Border>

        <!-- Toolbar -->
        <Border Grid.Row="2" Background="#ECF0F1" Padding="10">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="BtnAddRequest" Content="➕ Add New Request" 
                        Padding="15,8" Margin="0,0,10,0"
                        Background="#27AE60" Foreground="White" 
                        Click="BtnAddRequest_Click"/>
                <Button x:Name="BtnMarkAsComplete" Content="✅ Mark Complete" 
                        Padding="15,8" Margin="0,0,10,0"
                        Background="#27AE60" Foreground="White" 
                        Click="BtnMarkAsComplete_Click"/>
                <Button x:Name="BtnEditRequest" Content="✏️ Edit Request" 
                        Padding="15,8" Margin="0,0,10,0"
                        Background="#3498DB" Foreground="White" 
                        Click="BtnEditRequest_Click"/>
                <Button x:Name="BtnDeleteRequest" Content="🗑️ Delete Request" 
                        Padding="15,8" Margin="0,0,10,0"
                        Background="#E74C3C" Foreground="White" 
                        Click="BtnDeleteRequest_Click"/>
                <TextBox x:Name="TxtSearch" Width="250" Margin="20,0,0,0" 
                         VerticalContentAlignment="Center"
                         TextChanged="TxtSearch_TextChanged"/>
                <Button x:Name="BtnSearch" Content="🔍" 
                        Padding="10,8" Margin="5,0,0,0"
                        Background="#95A5A6" Foreground="White"/>
            </StackPanel>
        </Border>

        <!-- Data Grid -->
        <DataGrid Grid.Row="3" x:Name="DataGridRequests" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  Margin="10"
                  AlternatingRowBackground="#F8F9FA">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Unit" Binding="{Binding UnitInfo}" Width="100"/>
                <DataGridTextColumn Header="Tenant" Binding="{Binding TenantInfo}" Width="150"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="200"/>
                <DataGridTextColumn Header="Priority" Binding="{Binding Priority}" Width="100"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                <DataGridTextColumn Header="Request Date" Binding="{Binding RequestDate, StringFormat='{}{0:yyyy-MM-dd}'}" Width="100"/>
                <DataGridTextColumn Header="Completed Date" Binding="{Binding CompletedDate, StringFormat='{}{0:yyyy-MM-dd}'}" Width="100"/>
                <DataGridTextColumn Header="Cost ($)" Binding="{Binding Cost}" Width="80"/>
                <DataGridTextColumn Header="Assigned To" Binding="{Binding AssignedTo}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>