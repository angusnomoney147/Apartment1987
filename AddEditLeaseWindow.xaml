<Window x:Class="ApartmentManagementSystem.AddEditLeaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit Lease" Height="700" Width="700"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15">
            <TextBlock x:Name="TxtHeader" Text="Add New Lease" 
                      Foreground="White" FontSize="18" FontWeight="Bold"/>
        </Border>

        <!-- Form -->
        <Grid Grid.Row="1">
            <ScrollViewer>
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Property Selection -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="PropertyParams *" Margin="0,5"/>
                    <ComboBox Grid.Row="1" Grid.Column="0" x:Name="CmbProperties" Margin="0,0,10,15" Padding="5" SelectionChanged="CmbProperties_SelectionChanged"/>

                    <!-- Unit Selection -->
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="Unit *" Margin="0,5"/>
                    <ComboBox Grid.Row="1" Grid.Column="1" x:Name="CmbUnits" Margin="0,0,0,15" Padding="5"/>

                    <!-- Tenant Selection -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Tenant *" Margin="0,5"/>
                    <ComboBox Grid.Row="3" Grid.Column="0" x:Name="CmbTenants" Margin="0,0,10,15" Padding="5"/>

                    <!-- Start Date -->
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="Start Date *" Margin="0,5"/>
                    <DatePicker Grid.Row="3" Grid.Column="1" x:Name="DpStartDate" Margin="0,0,0,15" Padding="5"/>

                    <!-- End Date -->
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="End Date *" Margin="0,5"/>
                    <DatePicker Grid.Row="5" Grid.Column="0" x:Name="DpEndDate" Margin="0,0,10,15" Padding="5"/>

                    <!-- Monthly Rent -->
                    <TextBlock Grid.Row="4" Grid.Column="1" Text="Monthly Rent ($)" Margin="0,5"/>
                    <TextBox Grid.Row="5" Grid.Column="1" x:Name="TxtMonthlyRent" Margin="0,0,0,15" Padding="5" PreviewTextInput="DecimalOnly_PreviewTextInput"/>

                    <!-- Security Deposit -->
                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Security Deposit ($)" Margin="0,5"/>
                    <TextBox Grid.Row="7" Grid.Column="0" x:Name="TxtSecurityDeposit" Margin="0,0,10,15" Padding="5" PreviewTextInput="DecimalOnly_PreviewTextInput"/>

                    <!-- Status -->
                    <TextBlock Grid.Row="6" Grid.Column="1" Text="Status" Margin="0,5"/>
                    <ComboBox Grid.Row="7" Grid.Column="1" x:Name="CmbStatus" Margin="0,0,0,15" Padding="5"/>

                    <!-- Terms -->
                    <TextBlock Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" Text="Terms" Margin="0,5"/>
                    <TextBox Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" x:Name="TxtTerms" Margin="0,0,0,15" Padding="5"/>

                    <!-- Additional Terms/Notes -->
                    <TextBlock Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2" Text="Additional Terms/Notes" Margin="0,5"/>
                    <TextBox Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="2" x:Name="TxtDescription" 
                             Margin="0,0,0,15" Padding="5" Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>

                    <!-- Documents Section -->
                    <Border Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="2" Background="#F8F9FA" 
                            Margin="0,20,0,0" Padding="10" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="Lease Documents" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                            <Button x:Name="BtnViewDocuments" Content="📄 View/Edit Documents" 
                                    Width="200" Height="35"
                                    Background="#3498DB" Foreground="White"
                                    Click="BtnViewDocuments_Click"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </ScrollViewer>
        </Grid>

        <!-- Buttons -->
        <Border Grid.Row="2" Background="#ECF0F1" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="BtnCancel" Content="Cancel" 
                        Width="100" Height="35" Margin="0,0,10,0"
                        Background="#95A5A6" Foreground="White"
                        Click="BtnCancel_Click"/>
                <Button x:Name="BtnSave" Content="Save Lease" 
                        Width="120" Height="35"
                        Background="#27AE60" Foreground="White"
                        Click="BtnSave_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>