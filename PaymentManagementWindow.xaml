<Window x:Class="ApartmentManagementSystem.PaymentManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Payment Management" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2C3E50" Padding="15">
            <TextBlock Text="💰 Payment Management" 
                       Foreground="White" FontSize="18" FontWeight="Bold"/>
        </Border>

        <Border Grid.Row="1" Background="#FFFFFF" Padding="10" Margin="10,10,10,0"
                BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical" Margin="5">
                    <TextBlock Text="Total Paid" FontSize="12" Foreground="#7F8C8D"/>
                    <TextBlock x:Name="TxtTotalPaid" Text="$0.00" FontSize="20" FontWeight="Bold" Foreground="#27AE60"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Vertical" Margin="5">
                    <TextBlock Text="Total Overdue" FontSize="12" Foreground="#7F8C8D"/>
                    <TextBlock x:Name="TxtTotalOverdue" Text="$0.00" FontSize="20" FontWeight="Bold" Foreground="#E74C3C"/>
                </StackPanel>
                <StackPanel Grid.Column="2" Orientation="Vertical" Margin="5">
                    <TextBlock Text="Total Pending" FontSize="12" Foreground="#7F8C8D"/>
                    <TextBlock x:Name="TxtTotalPending" Text="$0.00" FontSize="20" FontWeight="Bold" Foreground="#F39C12"/>
                </StackPanel>
                <StackPanel Grid.Column="3" Orientation="Vertical" Margin="5">
                    <TextBlock Text="Total Cancelled" FontSize="12" Foreground="#7F8C8D"/>
                    <TextBlock x:Name="TxtTotalCancelled" Text="$0.00" FontSize="20" FontWeight="Bold" Foreground="#95A5A6"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="2" Background="#ECF0F1" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Status:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox x:Name="CmbStatusFilter" Width="150" Margin="0,0,20,0" 
                          SelectionChanged="CmbStatusFilter_SelectionChanged"/>
                <TextBlock Text="Method:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox x:Name="CmbMethodFilter" Width="150" Margin="0,0,20,0" 
                          SelectionChanged="CmbMethodFilter_SelectionChanged"/>
                <Button x:Name="BtnShowAll" Content="Show All" 
                        Padding="10,5" Margin="0,0,20,0"
                        Background="#3498DB" Foreground="White"
                        Click="BtnShowAll_Click"/>
                <Button x:Name="BtnPaidOnly" Content="Paid Only" 
                        Padding="10,5" Margin="0,0,20,0"
                        Background="#27AE60" Foreground="White"
                        Click="BtnPaidOnly_Click"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="3" Background="#ECF0F1" Padding="10">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="BtnAddPayment" Content="➕ Add New Payment" 
                        Padding="15,8" Margin="0,0,10,0"
                        Background="#27AE60" Foreground="White" 
                        Click="BtnAddPayment_Click"/>
                <Button x:Name="BtnEditPayment" Content="✏️ Edit Payment" 
                        Padding="15,8" Margin="0,0,10,0"
                        Background="#3498DB" Foreground="White" 
                        Click="BtnEditPayment_Click"/>
                <Button x:Name="BtnGenerateInvoice" Content="🧾 Generate Invoice" 
                        Padding="15,5" Margin="0,0,10,0"
                        Background="#9B59B6" Foreground="White" 
                        Click="BtnGenerateInvoice_Click"/>
                <Button x:Name="BtnDeletePayment" Content="🗑️ Delete Payment" 
                        Padding="15,8" Margin="0,0,10,0"
                        Background="#E74C3C" Foreground="White" 
                        Click="BtnDeletePayment_Click"/>
                <TextBox x:Name="TxtSearch" Width="250" Margin="20,0,0,0" 
                         VerticalContentAlignment="Center"
                         TextChanged="TxtSearch_TextChanged"/>
                <Button x:Name="BtnSearch" Content="🔍" 
                        Padding="10,8" Margin="5,0,0,0"
                        Background="#95A5A6" Foreground="White"/>
            </StackPanel>
        </Border>

        <TabControl x:Name="TabControl" Grid.Row="4" Margin="10">
            <TabItem Header="💳 All Payments">
                <Border Background="White" CornerRadius="10" Margin="5" Padding="15">
                    <DataGrid x:Name="DataGridPayments" 
                              AutoGenerateColumns="False" 
                              IsReadOnly="True"
                              SelectionMode="Single"
                              SelectionUnit="FullRow"
                              Margin="0,10,0,0"
                              AlternatingRowBackground="#F8F9FA">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Lease Info" Binding="{Binding LeaseInfo}" Width="200"/>
                            <DataGridTextColumn Header="Amount ($)" Binding="{Binding Amount, StringFormat='{}{0:C}'}" Width="100"/>
                            <DataGridTextColumn Header="Payment Date" Binding="{Binding PaymentDate, StringFormat='{}{0:yyyy-MM-dd}'}" Width="100"/>
                            <DataGridTextColumn Header="Method" Binding="{Binding Method}" Width="120"/>
                            <DataGridTextColumn Header="Reference #" Binding="{Binding ReferenceNumber}" Width="120"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                            <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </TabItem>

            <TabItem Header="👥 By Tenant">
                <Border Background="White" CornerRadius="10" Margin="5" Padding="15">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top" Text="Payments by Tenant" FontSize="16" FontWeight="Bold" 
                                   Foreground="#2C3E50" Margin="0,0,0,10"/>

                        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Filter by Tenant:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox x:Name="CmbTenantFilter" Width="200" Margin="0,0,10,0" 
                                     SelectionChanged="CmbTenantFilter_SelectionChanged"/>
                            <Button x:Name="BtnClearTenantFilter" Content="Clear" 
                                    Padding="10,5" Click="BtnClearTenantFilter_Click" Margin="0,0,10,0"/>
                            <Button x:Name="BtnGenerateTenantReport" Content="📄 Export Tenant Report" 
                                    Padding="10,5" 
                                    Background="#16A085" Foreground="White"
                                    Click="BtnGenerateTenantReport_Click"/>
                        </StackPanel>

                        <DataGrid x:Name="DataGridTenantPayments" 
                                  AutoGenerateColumns="False" 
                                  IsReadOnly="True"
                                  SelectionMode="Single"
                                  SelectionUnit="FullRow"
                                  Margin="0,10,0,0"
                                  AlternatingRowBackground="#F8F9FA">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                                <DataGridTextColumn Header="Lease Info" Binding="{Binding LeaseInfo}" Width="200"/>
                                <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat='{}{0:C}'}" Width="100"/>
                                <DataGridTextColumn Header="Payment Date" Binding="{Binding PaymentDate, StringFormat='{}{0:yyyy-MM-dd}'}" Width="100"/>
                                <DataGridTextColumn Header="Method" Binding="{Binding Method}" Width="100"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                                <DataGridTextColumn Header="Reference #" Binding="{Binding ReferenceNumber}" Width="120"/>
                                <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>
                </Border>
            </TabItem>
        </TabControl>
    </Grid>
</Window>