<Window x:Class="ApartmentManagementSystem.PaymentManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Payment Management" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15">
            <TextBlock Text="💰 Payment Management" 
                      Foreground="White" FontSize="18" FontWeight="Bold"/>
        </Border>

        <!-- Filters -->
        <Border Grid.Row="1" Background="#ECF0F1" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Status:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox x:Name="CmbStatusFilter" Width="150" Margin="0,0,20,0" 
                         SelectionChanged="CmbStatusFilter_SelectionChanged"/>
                <TextBlock Text="Method:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox x:Name="CmbMethodFilter" Width="150" Margin="0,0,20,0" 
                         SelectionChanged="CmbMethodFilter_SelectionChanged"/>
                <Button x:Name="BtnShowAll" Content="Show All" 
                        Padding="10,5" Margin="0,0,20,0"
                        Background="#3498DB" Foreground="White"
                        Click="BtnShowAll_Click"/>
                <Button x:Name="BtnPaidOnly" Content="Paid Only" 
                        Padding="10,5" Margin="0,0,20,0"
                        Background="#27AE60" Foreground="White"
                        Click="BtnPaidOnly_Click"/>
            </StackPanel>
        </Border>

        <!-- Toolbar -->
        <Border Grid.Row="2" Background="#ECF0F1" Padding="10">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="BtnAddPayment" Content="➕ Add New Payment" 
                        Padding="15,8" Margin="0,0,10,0"
                        Background="#27AE60" Foreground="White" 
                        Click="BtnAddPayment_Click"/>
                <Button x:Name="BtnEditPayment" Content="✏️ Edit Payment" 
                        Padding="15,8" Margin="0,0,10,0"
                        Background="#3498DB" Foreground="White" 
                        Click="BtnEditPayment_Click"/>
                <Button x:Name="BtnDeletePayment" Content="🗑️ Delete Payment" 
                        Padding="15,8" Margin="0,0,10,0"
                        Background="#E74C3C" Foreground="White" 
                        Click="BtnDeletePayment_Click"/>
                <TextBox x:Name="TxtSearch" Width="250" Margin="20,0,0,0" 
                         VerticalContentAlignment="Center"
                         TextChanged="TxtSearch_TextChanged"/>
                <Button x:Name="BtnSearch" Content="🔍" 
                        Padding="10,8" Margin="5,0,0,0"
                        Background="#95A5A6" Foreground="White"/>
            </StackPanel>
        </Border>

        <!-- Data Grid -->
        <DataGrid Grid.Row="3" x:Name="DataGridPayments" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  Margin="10"
                  AlternatingRowBackground="#F8F9FA">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Lease Info" Binding="{Binding LeaseInfo}" Width="200"/>
                <DataGridTextColumn Header="Amount ($)" Binding="{Binding Amount}" Width="100"/>
                <DataGridTextColumn Header="Payment Date" Binding="{Binding PaymentDate, StringFormat='{}{0:yyyy-MM-dd}'}" Width="100"/>
                <DataGridTextColumn Header="Method" Binding="{Binding Method}" Width="120"/>
                <DataGridTextColumn Header="Reference #" Binding="{Binding ReferenceNumber}" Width="120"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>