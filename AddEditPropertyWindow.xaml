<Window x:Class="ApartmentManagementSystem.AddEditPropertyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit Property" Height="600" Width="600"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15">
            <TextBlock x:Name="TxtHeader" Text="➕ Add New Property" 
                      Foreground="White" FontSize="18" FontWeight="Bold"/>
        </Border>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" Padding="20">
            <StackPanel>
                <!-- Property Name -->
                <TextBlock Text="Property Name:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="TxtName" Margin="0,0,0,15" Height="30"/>

                <!-- Address -->
                <TextBlock Text="Address:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="TxtAddress" Margin="0,0,0,15" Height="30"/>

                <!-- City -->
                <TextBlock Text="City:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="TxtCity" Margin="0,0,0,15" Height="30"/>

                <!-- State -->
                <TextBlock Text="State:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="TxtState" Margin="0,0,0,15" Height="30"/>

                <!-- Zip Code -->
                <TextBlock Text="Zip Code:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="TxtZipCode" Margin="0,0,0,15" Height="30"/>

                <!-- Country -->
                <TextBlock Text="Country:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="TxtCountry" Margin="0,0,0,15" Height="30"/>

                <!-- Manager Name -->
                <TextBlock Text="Manager Name:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="TxtManagerName" Margin="0,0,0,15" Height="30"/>

                <!-- Contact Info -->
                <TextBlock Text="Contact Info:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="TxtContactInfo" Margin="0,0,0,15" Height="30"/>

                <!-- Total Units -->
                <TextBlock Text="Total Units:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="TxtTotalUnits" Margin="0,0,0,15" Height="30" PreviewTextInput="NumberOnly_PreviewTextInput"/>

                <!-- Created Date -->
                <TextBlock Text="Created Date:" FontWeight="Bold" Margin="0,0,0,5"/>
                <DatePicker x:Name="DpCreatedDate" Margin="0,0,0,15" Height="30"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="2" Background="#ECF0F1" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="BtnSave" Content="💾 Save" 
                        Padding="20,8" Margin="0,0,10,0"
                        Background="#27AE60" Foreground="White"
                        Click="BtnSave_Click"/>
                <Button x:Name="BtnCancel" Content="❌ Cancel" 
                        Padding="20,8"
                        Background="#E74C3C" Foreground="White"
                        Click="BtnCancel_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>